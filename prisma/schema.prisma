generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String
  password    String
  role        String
  Quiz        Quiz[]
  StudentQuiz StudentQuiz[]
}

model Quiz {
  id          Int           @id @default(autoincrement())
  teacher     User          @relation(fields: [teacherId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  teacherId   Int
  name        String
  createdAt   DateTime      @default(now())
  questions   Question[]
  StudentQuiz StudentQuiz[]
}

model Question {
  id      Int    @id @default(autoincrement())
  quizId  Int
  quiz    Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  title   String
  option1 String
  option2 String
  option3 String
  option4 String
  answer  Int
}

model StudentQuiz {
  id            Int  @id @default(autoincrement())
  quizId        Int
  studentId     Int
  student       User @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  quiz          Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  obtainedMarks Int?
}
